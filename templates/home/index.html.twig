{% extends 'base.html.twig' %}

{% block title %}AnGo — Գեղեցկության սրահ Աբովյանում{% endblock %}
{% block meta_description %}AnGo գեղեցկության սրահ՝ պրոֆեսիոնալ վարպետներ, բարձրակարգ ծառայություններ և հարմարավետ միջավայր Աբովյանում։ Ամրագրեք այցը առցանց։{% endblock %}
{% block head_extra %}
    {# Help mobile LCP by preloading the first visible artist photo (if present) #}
    {% if artists is defined and artists|length > 0 and artists[0].photoUrl %}
        <link rel="preload" as="image" href="{{ path('app_image_photo', { filename: artists[0].photoUrl }) ~ '?w=384&fmt=webp' }}" type="image/webp">
        <link rel="preload" as="image" href="{{ path('app_image_photo', { filename: artists[0].photoUrl }) ~ '?w=384&fmt=jpg' }}" type="image/jpeg">
    {% endif %}
{% endblock %}

{% block structured_data %}
    {{ parent() }}
    {% set __ango_json_opts = constant('JSON_UNESCAPED_SLASHES') b-or constant('JSON_UNESCAPED_UNICODE') %}
    {% set __ango_site_url = absolute_url(path('app_home')) %}
    {% set __cat_labels = {'hair': 'Վարսահարդարում', 'nails': 'Մատնահարդարում', 'makeup': 'Դիմահարդարում'} %}

    {% set __offers = [] %}
    {% if services is defined %}
        {% for s in services %}
            {% set __offers = __offers|merge([{
                '@type': 'Offer',
                'price': s.price,
                'priceCurrency': 'AMD',
                'itemOffered': {
                    '@type': 'Service',
                    'name': s.name,
                    'serviceType': __cat_labels[s.category]|default(s.category),
                    'timeRequired': 'PT' ~ s.durationMinutes ~ 'M'
                }
            }]) %}
        {% endfor %}
    {% endif %}

    {% set __artist_list = [] %}
    {% if artists is defined %}
        {% for a in artists %}
            {% set __full_name = (a.user.firstName ~ ' ' ~ a.user.lastName)|trim %}
            {% set __person = {
                '@type': 'Person',
                'name': __full_name,
                'jobTitle': a.specialization,
                'url': absolute_url(path('app_artist_show', {id: a.id})),
                'worksFor': { '@id': __ango_site_url ~ '#localbusiness' }
            } %}
            {% if a.photoUrl %}
                {% set __person = __person|merge({'image': absolute_url(asset('uploads/photos/' ~ a.photoUrl))}) %}
            {% endif %}
            {% set __artist_list = __artist_list|merge([{
                '@type': 'ListItem',
                'position': loop.index,
                'item': __person
            }]) %}
        {% endfor %}
    {% endif %}

    <script type="application/ld+json">
        {{ {
            '@context': 'https://schema.org',
            '@graph': [
                {
                    '@type': 'OfferCatalog',
                    '@id': __ango_site_url ~ '#offers',
                    'name': 'Ծառայություններ',
                    'provider': { '@id': __ango_site_url ~ '#localbusiness' },
                    'itemListElement': __offers
                },
                {
                    '@type': 'ItemList',
                    '@id': __ango_site_url ~ '#artists',
                    'name': 'Վարպետներ',
                    'itemListElement': __artist_list
                }
            ]
        }|json_encode(__ango_json_opts)|raw }}
    </script>
{% endblock %}

