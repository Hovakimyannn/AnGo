{% extends 'base.html.twig' %}

{% block title %}Նոր գաղտնաբառ | AnGo{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-12">
        <div class="max-w-lg mx-auto bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
            <div class="bg-gray-900 text-white px-6 py-5">
                <h1 class="text-2xl font-bold">Սահմանել նոր գաղտնաբառ</h1>
                <p class="text-sm text-white/80 mt-1">Մուտքագրեք նոր գաղտնաբառը՝ հաշիվ մուտք գործելու համար</p>
            </div>

            <div class="p-6 space-y-6">
                {% if errors is defined and errors|length %}
                    <div class="rounded-xl bg-red-50 border border-red-200 text-red-800 p-4 text-sm">
                        <div class="font-bold mb-2">Խնդրում ենք ուղղել հետևյալը՝</div>
                        <ul class="list-disc pl-5 space-y-1">
                            {% for e in errors %}
                                <li>{{ e }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                {% if not tokenValid %}
                    <div class="rounded-xl bg-yellow-50 border border-yellow-200 text-yellow-900 p-4 text-sm">
                        Վերականգնման հղումը անվավեր է կամ ժամկետանց։ Խնդրում ենք խնդրել նոր հղում։
                    </div>
                    <a href="{{ path('app_forgot_password') }}"
                       class="inline-flex items-center justify-center w-full bg-pink-600 text-white font-bold py-3 rounded-xl hover:bg-pink-700 transition shadow-lg">
                        Ստանալ նոր հղում
                    </a>
                {% else %}
                    <form method="post" class="space-y-4">
                        <input type="hidden" name="_token" value="{{ csrf_token('reset_password') }}">

                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-1">Նոր գաղտնաբառ</label>
                            <input type="password" name="password" required
                                   class="w-full rounded-xl border border-gray-200 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-pink-200"
                                   placeholder="••••••••">
                            <div class="text-xs text-gray-500 mt-1">Առնվազն 8 նիշ</div>
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-1">Կրկնել</label>
                            <input type="password" name="passwordConfirm" required
                                   class="w-full rounded-xl border border-gray-200 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-pink-200"
                                   placeholder="••••••••">
                        </div>

                        <button class="w-full bg-pink-600 text-white font-bold py-3 rounded-xl hover:bg-pink-700 transition shadow-lg">
                            Պահպանել գաղտնաբառը
                        </button>

                        <div class="text-sm text-gray-600 text-center">
                            <a href="{{ path('app_login') }}" class="font-semibold text-pink-600 hover:underline">Վերադառնալ մուտք</a>
                        </div>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}


