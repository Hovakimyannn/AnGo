                                        fetchpriority="{{ loop.first ? 'high' : 'auto' }}"
                                    >
                                </picture>
                            {% else %}
                                <img src="https://ui-avatars.com/api/?name={{ artist.user.firstName }}+{{ artist.user.lastName }}&background=pink&color=fff&size=256" alt="{{ artist.user.firstName }} {{ artist.user.lastName }}" class="w-full h-full object-cover" loading="lazy">
                            {% endif %}

                            {% if artist.user.artistRatingCount > 0 %}
                                <div class="absolute top-4 right-4 bg-white/90 backdrop-blur px-3 py-1 rounded-full text-xs font-bold text-gray-800 shadow-sm">
                                    <i class="fas fa-star text-yellow-400 mr-1"></i>
                                    {{ artist.user.artistRatingAvg|number_format(1, '.', '') }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="p-6 text-center">
                            <h3 class="text-xl font-bold text-gray-900 mb-1">{{ artist.user.firstName }} {{ artist.user.lastName }}</h3>
                            <p class="text-pink-600 font-medium text-sm mb-4">{{ artist.specialization }}</p>

                            <a href="#booking"
                               data-artist-id="{{ artist.id }}"
                               class="relative z-20 block w-full border-2 border-gray-900 text-gray-900 font-semibold py-2 rounded-lg hover:bg-gray-900 hover:text-white transition">
                                Ամրագրել
                            </a>
                        </div>

                        {# Make whole card clickable (except booking button which stays above via z-20) #}
                        <a href="{{ path('app_artist_show', {id: artist.id}) }}"
                           class="absolute inset-0 z-10"
                           aria-label="{{ artist.user.firstName }} {{ artist.user.lastName }} էջ"></a>
                    </div>
                {% else %}
                    <div class="col-span-4 text-center text-gray-500 py-10">
                        <p>Այս պահին ակտիվ վարպետներ չկան։ Խնդրում ենք ավելացնել ադմին պանելից։</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {# --- ABOUT SECTION --- #}
    <section id="about" class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="text-center mb-12">
                {% set __about_title = (homeSettings is defined and homeSettings and homeSettings.aboutTitle) ? homeSettings.aboutTitle : 'Մեր մասին' %}
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{{ __about_title }}</h2>
                <div class="w-24 h-1 bg-pink-500 mx-auto rounded-full"></div>
            </div>

            <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8 items-start">
                <div class="md:col-span-2">
                    {% set __about_text_1 = (homeSettings is defined and homeSettings and homeSettings.aboutText1) ? homeSettings.aboutText1 : 'AnGo-ը ստեղծվել է՝ մեկ նպատակով․ առաջարկել բարձրակարգ ծառայություններ, պրոֆեսիոնալ մոտեցում և հարմարավետ միջավայր՝ յուրաքանչյուր այցը դարձնելով հաճելի փորձ։' %}
                    {% set __about_text_2 = (homeSettings is defined and homeSettings and homeSettings.aboutText2) ? homeSettings.aboutText2 : 'Մեր թիմը մշտապես հետևում է նորաձևության թրենդներին և աշխատում է որակյալ նյութերով՝ ապահովելով լավագույն արդյունքը։' %}
                    <p class="text-gray-600 leading-relaxed">{{ __about_text_1|e|nl2br }}</p>
                    <p class="text-gray-600 leading-relaxed mt-4">{{ __about_text_2|e|nl2br }}</p>
                </div>
                <div class="bg-gray-50 rounded-2xl p-6 border border-gray-100">
                    <div class="flex items-center gap-3 mb-4">
                        <span class="w-10 h-10 rounded-full bg-pink-100 text-pink-600 flex items-center justify-center">
                            <i class="fas fa-award"></i>
                        </span>
                        {% set __why_us_title = (homeSettings is defined and homeSettings and homeSettings.whyUsTitle) ? homeSettings.whyUsTitle : 'Ինչու՞ մենք' %}
                        <div class="font-bold text-gray-900">{{ __why_us_title }}</div>
                    </div>
                    <ul class="text-sm text-gray-600 space-y-2">
                        {% set __why_us_items = [] %}
                        {% if homeSettings is defined and homeSettings and homeSettings.whyUsItems %}
                            {% for line in homeSettings.whyUsItems|replace({"\r": ""})|split("\n") %}
                                {% if line|trim %}
                                    {% set __why_us_items = __why_us_items|merge([line|trim]) %}
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                        {% if __why_us_items is empty %}
                            {% set __why_us_items = ['Պրոֆեսիոնալ վարպետներ', 'Անհատական մոտեցում', 'Որակյալ նյութեր', 'Հարմարավետ միջավայր'] %}
                        {% endif %}

                        {% for item in __why_us_items %}
                            <li>{{ item }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </section>

    {# --- CONTACT SECTION --- #}
    <section id="contact" class="py-20 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="text-center mb-12">
                {% set __contact_title = (homeSettings is defined and homeSettings and homeSettings.contactTitle) ? homeSettings.contactTitle : 'Կապ' %}
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{{ __contact_title }}</h2>
                <div class="w-24 h-1 bg-pink-500 mx-auto rounded-full"></div>
            </div>

            <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm">
                    <div class="font-bold text-gray-900 mb-2"><i class="fas fa-map-marker-alt mr-2 text-pink-600"></i> Հասցե</div>
                    {% set __contact_address = (homeSettings is defined and homeSettings and homeSettings.contactAddress) ? homeSettings.contactAddress : 'Ք.Աբովյան, Սարալանջի 22' %}
                    <div class="text-gray-600 text-sm">{{ __contact_address }}</div>
                </div>
                <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm">
                    <div class="font-bold text-gray-900 mb-2"><i class="fas fa-phone mr-2 text-pink-600"></i> Հեռախոս</div>
                    {% set __contact_phone = (homeSettings is defined and homeSettings and homeSettings.contactPhone) ? homeSettings.contactPhone : '+374 94 64 99 24' %}
                    <div class="text-gray-600 text-sm">{{ __contact_phone }}</div>
                </div>
                <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm">
                    <div class="font-bold text-gray-900 mb-2"><i class="far fa-clock mr-2 text-pink-600"></i> Աշխատանքային ժամեր</div>
                    {% set __hours_1 = (homeSettings is defined and homeSettings and homeSettings.contactHoursLine1) ? homeSettings.contactHoursLine1 : 'Երկ - Շաբ: 10:00 - 20:00' %}
                    {% set __hours_2 = (homeSettings is defined and homeSettings and homeSettings.contactHoursLine2) ? homeSettings.contactHoursLine2 : 'Կիր: 11:00 - 18:00' %}
                    <div class="text-gray-600 text-sm">{{ __hours_1 }}</div>
                    <div class="text-gray-600 text-sm">{{ __hours_2 }}</div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
