{% extends 'base.html.twig' %}

{% block title %}Գլխավոր | AnGo{% endblock %}
{% block meta_description %}AnGo գեղեցկության սրահ՝ պրոֆեսիոնալ վարպետներ, բարձրակարգ ծառայություններ և հարմարավետ միջավայր Աբովյանում։ Ամրագրեք այցը առցանց։{% endblock %}
{% block head_extra %}
    {# Help mobile LCP by preloading the first visible artist photo (if present) #}
    {% if artists is defined and artists|length > 0 and artists[0].photoUrl %}
        <link rel="preload" as="image" href="{{ path('app_image_photo', { filename: artists[0].photoUrl }) ~ '?w=384&fmt=webp' }}" type="image/webp">
        <link rel="preload" as="image" href="{{ path('app_image_photo', { filename: artists[0].photoUrl }) ~ '?w=384&fmt=jpg' }}" type="image/jpeg">
    {% endif %}
{% endblock %}

{% block body %}
    {# --- HERO SECTION --- #}
    <div class="relative h-[600px] flex items-center justify-center overflow-hidden">
        {# Background Image with Overlay #}
        <div class="absolute inset-0 z-0">
            <img
                src="https://images.unsplash.com/photo-1560066984-138dadb4c035?ixlib=rb-4.0.3&auto=format&fit=crop&w=960&q=80"
                srcset="
                    https://images.unsplash.com/photo-1560066984-138dadb4c035?ixlib=rb-4.0.3&auto=format&fit=crop&w=640&q=80 640w,
                    https://images.unsplash.com/photo-1560066984-138dadb4c035?ixlib=rb-4.0.3&auto=format&fit=crop&w=960&q=80 960w,
                    https://images.unsplash.com/photo-1560066984-138dadb4c035?ixlib=rb-4.0.3&auto=format&fit=crop&w=1280&q=80 1280w,
                    https://images.unsplash.com/photo-1560066984-138dadb4c035?ixlib=rb-4.0.3&auto=format&fit=crop&w=1674&q=80 1674w
                "
                sizes="100vw"
                alt="Սրահ"
                class="w-full h-full object-cover"
                loading="eager"
                fetchpriority="high"
            >
            <div class="absolute inset-0 bg-gradient-to-r from-black/80 to-black/40"></div>
        </div>

        <div class="relative z-10 text-center px-4 max-w-4xl mx-auto mt-16">
            <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight text-shadow-soft">
                Բացահայտեք Ձեր <br/><span class="text-pink-500">Կատարելությունը</span>
            </h1>
            <p class="text-lg md:text-xl text-gray-200 mb-10 font-light">
                Պրոֆեսիոնալ մոտեցում, բարձրակարգ սպասարկում և հարմարավետ միջավայր հենց Աբովյանի սրտում։
            </p>
            <div class="flex flex-col md:flex-row gap-4 justify-center">
                <a href="#booking" class="bg-pink-600 text-white px-8 py-4 rounded-full font-bold hover:bg-pink-700 transition shadow-xl hover:shadow-pink-500/30 transform hover:-translate-y-1">
                    Ամրագրել Այց
                </a>
                <a href="#masters" class="bg-white/10 backdrop-blur border border-white/30 text-white px-8 py-4 rounded-full font-bold hover:bg-white hover:text-gray-900 transition">
                    Տեսնել Վարպետներին
                </a>
            </div>
        </div>
    </div>

    {# --- SERVICES SECTION --- #}
    <section id="our-services" class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Մեր Ծառայությունները</h2>
                <div class="w-24 h-1 bg-pink-500 mx-auto rounded-full"></div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- Վարսահարդարում -->
                <div class="group relative overflow-hidden rounded-2xl shadow-lg cursor-pointer h-80">
                    <img
                        src="https://images.unsplash.com/photo-1562322140-8baeececf3df?auto=format&fit=crop&w=360&q=60"
                        srcset="
                            https://images.unsplash.com/photo-1562322140-8baeececf3df?auto=format&fit=crop&w=240&q=60 240w,
                            https://images.unsplash.com/photo-1562322140-8baeececf3df?auto=format&fit=crop&w=320&q=60 320w,
                            https://images.unsplash.com/photo-1562322140-8baeececf3df?auto=format&fit=crop&w=360&q=60 360w,
                            https://images.unsplash.com/photo-1562322140-8baeececf3df?auto=format&fit=crop&w=480&q=60 480w,
                            https://images.unsplash.com/photo-1562322140-8baeececf3df?auto=format&fit=crop&w=640&q=60 640w
                        "
                        sizes="(min-width: 768px) 33vw, 100vw"
                        alt="Վարսահարդարում"
                        class="w-full h-full object-cover transition duration-500 group-hover:scale-110"
                        loading="lazy"
                    >
                    <div class="absolute inset-0 bg-black/50 flex flex-col items-center justify-center p-6 text-center transition group-hover:bg-black/40">
                        <i class="fas fa-cut text-4xl text-white mb-3"></i>
                        <h3 class="text-2xl font-bold text-white">Վարսահարդարում</h3>
                        <p class="text-white/80 mt-2 opacity-0 group-hover:opacity-100 transition transform translate-y-4 group-hover:translate-y-0">
                            Կտրվածքներ, ներկում և խնամք
                        </p>
                    </div>
                </div>
                <!-- Դիմահարդարում -->
                <div class="group relative overflow-hidden rounded-2xl shadow-lg cursor-pointer h-80">
                    <img
                        src="https://images.unsplash.com/photo-1487412720507-e7ab37603c6f?auto=format&fit=crop&w=360&q=60"
                        srcset="
                            https://images.unsplash.com/photo-1487412720507-e7ab37603c6f?auto=format&fit=crop&w=240&q=60 240w,
                            https://images.unsplash.com/photo-1487412720507-e7ab37603c6f?auto=format&fit=crop&w=320&q=60 320w,
                            https://images.unsplash.com/photo-1487412720507-e7ab37603c6f?auto=format&fit=crop&w=360&q=60 360w,
                            https://images.unsplash.com/photo-1487412720507-e7ab37603c6f?auto=format&fit=crop&w=480&q=60 480w,
                            https://images.unsplash.com/photo-1487412720507-e7ab37603c6f?auto=format&fit=crop&w=640&q=60 640w
                        "
                        sizes="(min-width: 768px) 33vw, 100vw"
                        alt="Դիմահարդարում"
                        class="w-full h-full object-cover transition duration-500 group-hover:scale-110"
                        loading="lazy"
                    >
                    <div class="absolute inset-0 bg-black/50 flex flex-col items-center justify-center p-6 text-center transition group-hover:bg-black/40">
                        <i class="fas fa-magic text-4xl text-white mb-3"></i>
                        <h3 class="text-2xl font-bold text-white">Դիմահարդարում</h3>
                        <p class="text-white/80 mt-2 opacity-0 group-hover:opacity-100 transition transform translate-y-4 group-hover:translate-y-0">
                            Երեկոյան և ամենօրյա make-up
                        </p>
                    </div>
                </div>
                <!-- Մատնահարդարում -->
                <div class="group relative overflow-hidden rounded-2xl shadow-lg cursor-pointer h-80">
                    <img
                        src="https://images.unsplash.com/photo-1604654894610-df63bc536371?auto=format&fit=crop&w=360&q=60"
                        srcset="
                            https://images.unsplash.com/photo-1604654894610-df63bc536371?auto=format&fit=crop&w=240&q=60 240w,
                            https://images.unsplash.com/photo-1604654894610-df63bc536371?auto=format&fit=crop&w=320&q=60 320w,
                            https://images.unsplash.com/photo-1604654894610-df63bc536371?auto=format&fit=crop&w=360&q=60 360w,
                            https://images.unsplash.com/photo-1604654894610-df63bc536371?auto=format&fit=crop&w=480&q=60 480w,
                            https://images.unsplash.com/photo-1604654894610-df63bc536371?auto=format&fit=crop&w=640&q=60 640w
                        "
                        sizes="(min-width: 768px) 33vw, 100vw"
                        alt="Մատնահարդարում"
                        class="w-full h-full object-cover transition duration-500 group-hover:scale-110"
                        loading="lazy"
                    >
                    <div class="absolute inset-0 bg-black/50 flex flex-col items-center justify-center p-6 text-center transition group-hover:bg-black/40">
                        <i class="fas fa-hand-sparkles text-4xl text-white mb-3"></i>
                        <h3 class="text-2xl font-bold text-white">Մատնահարդարում</h3>
                        <p class="text-white/80 mt-2 opacity-0 group-hover:opacity-100 transition transform translate-y-4 group-hover:translate-y-0">
                            Մանիկյուր և Պեդիկյուր
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# --- ARTISTS SECTION (DYNAMIC) --- #}
    <section id="masters" class="py-20 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Թոփ Վարպետներ</h2>
                <p class="text-gray-500 max-w-2xl mx-auto">Ծանոթացեք մեր պրոֆեսիոնալ թիմի հետ</p>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                {% for artist in artists %}
                    <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition duration-300 border border-gray-100 group">
                        <div class="relative h-64 overflow-hidden">
                            {% if artist.photoUrl %}
                                <picture>
                                    <source
                                        type="image/webp"
                                        srcset="
                                            {{ path('app_image_photo', { filename: artist.photoUrl }) ~ '?w=256&fmt=webp' }} 256w,
                                            {{ path('app_image_photo', { filename: artist.photoUrl }) ~ '?w=384&fmt=webp' }} 384w,
                                            {{ path('app_image_photo', { filename: artist.photoUrl }) ~ '?w=512&fmt=webp' }} 512w
                                        "
                                        sizes="(min-width: 1024px) 25vw, (min-width: 640px) 50vw, 100vw"
                                    >
                                    <img
                                        src="{{ path('app_image_photo', { filename: artist.photoUrl }) ~ '?w=384&fmt=jpg' }}"
                                        srcset="
                                            {{ path('app_image_photo', { filename: artist.photoUrl }) ~ '?w=256&fmt=jpg' }} 256w,
                                            {{ path('app_image_photo', { filename: artist.photoUrl }) ~ '?w=384&fmt=jpg' }} 384w,
                                            {{ path('app_image_photo', { filename: artist.photoUrl }) ~ '?w=512&fmt=jpg' }} 512w
                                        "
                                        sizes="(min-width: 1024px) 25vw, (min-width: 640px) 50vw, 100vw"
                                        alt="{{ artist.user.firstName }} {{ artist.user.lastName }}"
                                        class="w-full h-full object-cover transition duration-500 group-hover:scale-110"
                                        loading="{{ loop.first ? 'eager' : 'lazy' }}"
                                        fetchpriority="{{ loop.first ? 'high' : 'auto' }}"
                                    >
                                </picture>
                            {% else %}
                                <img src="https://ui-avatars.com/api/?name={{ artist.user.firstName }}+{{ artist.user.lastName }}&background=pink&color=fff&size=256" alt="{{ artist.user.firstName }} {{ artist.user.lastName }}" class="w-full h-full object-cover" loading="lazy">
                            {% endif %}

                            <div class="absolute top-4 right-4 bg-white/90 backdrop-blur px-3 py-1 rounded-full text-xs font-bold text-gray-800 shadow-sm">
                                <i class="fas fa-star text-yellow-400 mr-1"></i> 5.0
                            </div>
                        </div>
                        <div class="p-6 text-center">
                            <h3 class="text-xl font-bold text-gray-900 mb-1">{{ artist.user.firstName }} {{ artist.user.lastName }}</h3>
                            <p class="text-pink-600 font-medium text-sm mb-4">{{ artist.specialization }}</p>

                            <a href="#booking"
                               data-artist-id="{{ artist.id }}"
                               class="block w-full border-2 border-gray-900 text-gray-900 font-semibold py-2 rounded-lg hover:bg-gray-900 hover:text-white transition">
                                Ամրագրել
                            </a>
                        </div>
                    </div>
                {% else %}
                    <div class="col-span-4 text-center text-gray-500 py-10">
                        <p>Այս պահին ակտիվ վարպետներ չկան։ Խնդրում ենք ավելացնել ադմին պանելից։</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {# --- ABOUT SECTION --- #}
    <section id="about" class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Մեր մասին</h2>
                <div class="w-24 h-1 bg-pink-500 mx-auto rounded-full"></div>
            </div>

            <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8 items-start">
                <div class="md:col-span-2">
                    <p class="text-gray-600 leading-relaxed">
                        AnGo-ը ստեղծվել է՝ մեկ նպատակով․ առաջարկել բարձրակարգ ծառայություններ, պրոֆեսիոնալ մոտեցում և
                        հարմարավետ միջավայր՝ յուրաքանչյուր այցը դարձնելով հաճելի փորձ։
                    </p>
                    <p class="text-gray-600 leading-relaxed mt-4">
                        Մեր թիմը մշտապես հետևում է նորաձևության թրենդներին և աշխատում է որակյալ նյութերով՝ ապահովելով
                        լավագույն արդյունքը։
                    </p>
                </div>
                <div class="bg-gray-50 rounded-2xl p-6 border border-gray-100">
                    <div class="flex items-center gap-3 mb-4">
                        <span class="w-10 h-10 rounded-full bg-pink-100 text-pink-600 flex items-center justify-center">
                            <i class="fas fa-award"></i>
                        </span>
                        <div class="font-bold text-gray-900">Ինչու՞ մենք</div>
                    </div>
                    <ul class="text-sm text-gray-600 space-y-2">
                        <li>Պրոֆեսիոնալ վարպետներ</li>
                        <li>Անհատական մոտեցում</li>
                        <li>Որակյալ նյութեր</li>
                        <li>Հարմարավետ միջավայր</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    {# --- CONTACT SECTION --- #}
    <section id="contact" class="py-20 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Կապ</h2>
                <div class="w-24 h-1 bg-pink-500 mx-auto rounded-full"></div>
            </div>

            <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm">
                    <div class="font-bold text-gray-900 mb-2"><i class="fas fa-map-marker-alt mr-2 text-pink-600"></i> Հասցե</div>
                    <div class="text-gray-600 text-sm">Երևան, Թումանյան 25</div>
                </div>
                <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm">
                    <div class="font-bold text-gray-900 mb-2"><i class="fas fa-phone mr-2 text-pink-600"></i> Հեռախոս</div>
                    <div class="text-gray-600 text-sm">+374 99 123 456</div>
                </div>
                <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm">
                    <div class="font-bold text-gray-900 mb-2"><i class="far fa-clock mr-2 text-pink-600"></i> Աշխատանքային ժամեր</div>
                    <div class="text-gray-600 text-sm">Երկ - Շաբ: 10:00 - 20:00</div>
                    <div class="text-gray-600 text-sm">Կիր: 11:00 - 18:00</div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}