{
  "name": "ango-assets",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -c tailwind.config.js -i ./assets/styles/app.css -o ./public/build/app.css --minify",
    "watch:css": "tailwindcss -c tailwind.config.js -i ./assets/styles/app.css -o ./public/build/app.css --watch",
    "build:fa": "mkdir -p ./public/vendor/fontawesome/css ./public/vendor/fontawesome/webfonts && cp ./node_modules/@fortawesome/fontawesome-free/css/all.min.css ./public/vendor/fontawesome/css/all.min.css && cp -r ./node_modules/@fortawesome/fontawesome-free/webfonts/* ./public/vendor/fontawesome/webfonts/"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17"
  }
}
