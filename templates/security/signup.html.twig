{% extends 'base.html.twig' %}

{% block title %}Գրանցվել | AnGo{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-12">
        <div class="max-w-lg mx-auto bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
            <div class="bg-gray-900 text-white px-6 py-5">
                <h1 class="text-2xl font-bold">Գրանցվել</h1>
                <p class="text-sm text-white/80 mt-1">Ստեղծեք հաշիվ՝ գնահատելու և մեկնաբանելու համար</p>
            </div>

            <div class="p-6 space-y-6">
                {% for message in app.flashes('success') %}
                    <div class="rounded-xl bg-green-50 border border-green-200 text-green-800 p-4 text-sm">
                        {{ message }}
                    </div>
                {% endfor %}

                {% if errors is defined and errors|length %}
                    <div class="rounded-xl bg-red-50 border border-red-200 text-red-800 p-4 text-sm">
                        <div class="font-bold mb-2">Խնդրում ենք ուղղել հետևյալը՝</div>
                        <ul class="list-disc pl-5 space-y-1">
                            {% for e in errors %}
                                <li>{{ e }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                <form method="post" class="space-y-4">
                    <input type="hidden" name="_token" value="{{ csrf_token('signup') }}">

                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-1">Անուն</label>
                            <input name="firstName" value="{{ data.firstName|default('') }}" required
                                   class="w-full rounded-xl border border-gray-200 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-pink-200"
                                   placeholder="Օր․ Անի">
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-1">Ազգանուն</label>
                            <input name="lastName" value="{{ data.lastName|default('') }}" required
                                   class="w-full rounded-xl border border-gray-200 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-pink-200"
                                   placeholder="Օր․ Պետրոսյան">
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-1">Էլ․ հասցե</label>
                        <input type="email" name="email" value="{{ data.email|default('') }}" required
                               class="w-full rounded-xl border border-gray-200 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-pink-200"
                               placeholder="you@example.com">
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-1">Հեռախոս (կամայական)</label>
                        <input name="phone" value="{{ data.phone|default('') }}"
                               class="w-full rounded-xl border border-gray-200 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-pink-200"
                               placeholder="+374...">
                    </div>

                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-1">Գաղտնաբառ</label>
                            <input type="password" name="password" required
                                   class="w-full rounded-xl border border-gray-200 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-pink-200"
                                   placeholder="••••••••">
                            <div class="text-xs text-gray-500 mt-1">Առնվազն 8 նիշ</div>
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-1">Կրկնել</label>
                            <input type="password" name="passwordConfirm" required
                                   class="w-full rounded-xl border border-gray-200 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-pink-200"
                                   placeholder="••••••••">
                        </div>
                    </div>

                    <button class="w-full bg-pink-600 text-white font-bold py-3 rounded-xl hover:bg-pink-700 transition shadow-lg">
                        Ստեղծել հաշիվ
                    </button>

                    <div class="text-sm text-gray-600 text-center">
                        Արդեն ունե՞ք հաշիվ։
                        <a href="{{ path('app_login') }}" class="font-semibold text-pink-600 hover:underline">Մուտք</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}


